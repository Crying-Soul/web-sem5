{
  "name": "library-app",
  "version": "1.1.1",
  "description": "Home Library Management System",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client && npm run postbuild",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "webpack --config webpack.config.js ",
    "clean": "rimraf dist",
    "postbuild": "npm run copy:views && npm run copy:data && npm run copy:uploads",
    "copy:views": "copyfiles -u 1 \"src/views/**/*\" dist/",
    "copy:data": "copyfiles -u 1 \"data/**/*\" dist/",
    "copy:uploads": "copyfiles -u 1 \"src/public/uploads/**/*\" dist/public/uploads/",
    "start": "npm run clean && npm run build && node dist/server.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:watch:server\" \"npm:watch:client\" \"npm:serve:dev\"",
    "watch:server": "tsc -p tsconfig.json -w",
    "watch:client": "webpack --config webpack.config.js --mode=development --watch",
    "serve:dev": "nodemon --watch dist --delay 200ms --exec \"node dist/server.js\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-session": "^1.18.1",
    "multer": "^2.0.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-flash": "^0.0.40",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.7.4",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^9.0.7",
    "babel-loader": "^9.2.1",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "mini-css-extract-plugin": "^2.9.4",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.1",
    "sass": "^1.80.6",
    "sass-loader": "^16.0.3",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
